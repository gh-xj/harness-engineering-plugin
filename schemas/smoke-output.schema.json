{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/smoke-output.schema.json",
  "title": "Smoke Output",
  "type": "object",
  "required": ["run_id", "status", "checks"],
  "properties": {
    "run_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["pass", "fail"]
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  },
  "additionalProperties": true
}
