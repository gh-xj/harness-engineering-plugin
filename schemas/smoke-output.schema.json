{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/smoke-output.schema.json",
  "title": "Smoke Output",
  "type": "object",
  "required": ["run_id", "status", "checks"],
  "properties": {
    "run_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["pass", "fail"]
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "status", "duration_ms"],
        "properties": {
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pass", "fail"]
          },
          "duration_ms": {
            "type": "number",
            "minimum": 0
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
